# ===========================================
# OPTICASH MONOREPO - VARIABLES DE ENTORNO
# ===========================================

# ===========================================
# BASE DE DATOS
# ===========================================
DATABASE_URL=postgresql://opticash_user:opticash_password@localhost:5432/opticash
POSTGRES_DB=opticash
POSTGRES_USER=opticash_user
POSTGRES_PASSWORD=opticash_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# ===========================================
# REDIS
# ===========================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# ===========================================
# BACKEND (FASTAPI)
# ===========================================
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ===========================================
# FRONTEND (REACT)
# ===========================================
REACT_APP_API_URL=http://localhost:8000
REACT_APP_ENVIRONMENT=development
REACT_APP_VERSION=1.0.0

# ===========================================
# NGINX
# ===========================================
NGINX_HOST=localhost
NGINX_PORT=80
NGINX_SSL_PORT=443

# ===========================================
# DOCKER
# ===========================================
COMPOSE_PROJECT_NAME=opticash
DOCKER_NETWORK=opticash_network

# ===========================================
# DESARROLLO
# ===========================================
NODE_ENV=development
PYTHON_ENV=development
DEBUG=true
LOG_LEVEL=INFO

